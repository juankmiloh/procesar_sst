                ->leftJoin('escenario_tiene_deportes etd', 'escenario.esc_id = etd.esc_id')
                ->where('esc_activo = '.ESTADO_ACTIVO." and etd.dep_id = ".$deporte->dep_id)
                ->all(),'esc_id','esc_nombre');
        

        return $this->render('listar', 
                array(
