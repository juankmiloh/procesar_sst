    public function actionGetdeportesfromevento(){
        $evento = $_GET['id'];
        $deportes = \app\models\Deporte::find()
                ->leftJoin('campeonato c', 'deporte.dep_id = c.dep_id')
                ->where('c.eve_id = '.$evento)
