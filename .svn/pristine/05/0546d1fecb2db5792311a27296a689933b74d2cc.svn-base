    */
    public static function actualizarDisponibilidadPorEscenario($idEsc){
        $disponibilidad = DisponibilidadEscenario::find()->where(['esc_id'=>null])->all();
        if(sizeof($disponibilidad) > 0){
			foreach ($disponibilidad as $d) {
	            $d->esc_id = $idEsc;
	            $d->update();
	        }
        }
        
    }

